@using Ouvidoria.Web.ViewModels.Usuario
@model RegistrarCidadaoViewModel

<section>
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <h1 class="h4 text-center mb-4">Sistema de Ouvidoria</h1>
                    <h2 class="h5 text-center mb-4 text-muted">Cadastro de usuário</h2>

                    <form asp-action="RegistrarCidadao">
                        <!-- Campos do formulário -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" class="form-control" asp-for=@Model.Email required>
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>

                        <div class="mb-3">
                            <label for="fullName" class="form-label">Nome Completo:</label>
                            <input type="text" class="form-control" asp-for=@Model.Nome required>
                            <span class="text-danger" asp-validation-for="@Model.Nome"></span>
                        </div>

                        <div class="mb-3">
                            <label for="username" class="form-label">Nome de Usuário:</label>
                            <input type="text" class="form-control" asp-for=@Model.UserName required>
                            <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                        </div>

                        <div class="d-flex gap-4">
                            <div class="mb-3 w-50">
                                <label for="password" class="form-label">Senha:</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" asp-for=@Model.Password required>
                                    <button class="btn btn-outline-secondary toggle-password" type="button">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                            </div>

                            <div class="mb-3 w-50">
                                <label for="confirmPassword" class="form-label">Repita sua Senha:</label>
                                <input type="password" class="form-control" asp-for=@Model.ConfirmPassword required>
                                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="birthdate" class="form-label">Data de Nascimento:</label>
                            <input type="date" class="form-control" asp-for=@Model.DataNascimento required>
                            <span class="text-danger" asp-validation-for="@Model.DataNascimento"></span>
                        </div>

                        <div class="mb-3">
                            <label for="@Model.Endereco">Endereço:</label>
                            <input type="text" class="form-control" asp-for=@Model.Endereco>
                            <span class="text-danger" asp-validation-for="@Model.Endereco"></span>
                        </div>

                        <div class="d-flex gap-4">
                            <div class="mb-3 w-50">
                                <label for="@Model.Cpf">CPF:</label>
                                <input type="text" class="form-control" asp-for=@Model.Cpf>
                                <span class="text-danger" asp-validation-for="@Model.Cpf"></span>
                            </div>

                            <div class="mb-3 w-50">
                                <label for="@Model.Telefone">Telefone:</label>
                                <input type="text" class="form-control" asp-for=@Model.Telefone>
                                <span class="text-danger" asp-validation-for="@Model.Telefone"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="Login.html"><button class="botao borda">Cancelar</button></a>
                            <a href="Login.html"><button type="submit" class="botao verde">Cadastrar</button></a>
                    </form>
                </div>
            </div>
        </div>
    </div>


</section>
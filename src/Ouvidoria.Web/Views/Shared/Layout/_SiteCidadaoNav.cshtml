<div class="auth_sidebar">
    <div class="d-flex flex-column px-5 w-100 h-100 justify-content-between">
        <div class="d-flex flex-column align-items-center gap-3">
            <img id="sidebarProfilePic" src="~/svg/user-tie-solid.svg" width="88px" height="88px"
                style="border-radius:49px; border:2px solid black; background-color:#eaeaea" alt="">
            <label style="font-size:14px" for="sidebarProfilePic">@User.Claims.FirstOrDefault(x =>
                                x.Type.Equals("RealName"))?.Value</label>
        </div>
        <div class="d-flex flex-column align-items-center gap-5">
            <a asp-controller="Administrador" asp-action="Registros" class="d-flex flex-column justify-content-center p-3 align-items-center text-decoration-none text-black"  style="width:150px; background-color:#9FE5C1">
                <img width="24px" height="24px" src="~/svg/archive.svg" />
                <span class="d-block text-center">Registros</span>
            </a>
            <a asp-controller="User" asp-action="Detalhes" class="d-flex flex-column justify-content-center p-3 align-items-center text-decoration-none text-black" style="width:150px">
                <img width="24px" height="24px" src="~/svg/user-tie-solid.svg" />
                <span class="d-block text-center">Meu perfil</span>
            </a>
            <a asp-controller="User" asp-action="Logout" class="d-flex flex-column justify-content-center p-3 align-items-center text-decoration-none text-black" style="width:150px">
                <img width="24px" height="24px" src="~/svg/right-from-bracket-solid.svg" />
                <span class="d-block text-center">Sair</span>
            </a>
        </div>
    </div>
</div>